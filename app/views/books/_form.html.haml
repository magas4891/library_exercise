.new-book-form
  = bootstrap_form_with(model: book, local: true, id: "new-book") do |form|
    - if book.errors.any?
      #error_explanation
        %h2
          = pluralize(book.errors.count, "error")
          prohibited this book from being saved:
        %ul
          - book.errors.full_messages.each do |message|
            %li= message
    = form.text_field :name, hide_label: true, placeholder: "Enter title of the new Book", class: "form-placeholder"
    %p
    = form.text_field :author, hide_label: true, placeholder: "Enter author of the new Book", class: "form-placeholder"
    %p
    = form.file_field :cover, hide_label: true, placeholder: "Chose cover image for the Book", class: "form-placeholder"
    %p
    = form.text_area :description, hide_label: true, placeholder: "Type description for for the Book", class: "form-placeholder"
    .actions
      = form.submit class: "btn btn-success"
      = link_to "Cancel", books_path, class: "btn btn-success"

