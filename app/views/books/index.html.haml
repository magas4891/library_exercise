#books-index
  .content
    = render 'layouts/top-five'
    %h2= 'Books in our library'
    .books-index-content
      %table.table.table-hover
        %thead
          %tr
            %td= ' '
            %td= 'Name'
            %td= 'Status'
            %td= ' '
        %tbody
          - @books.each do |book|
            %tr
              - if book.cover?
                %td= image_tag book.cover.url
              - else
                %td= image_tag "no_cover.png", size: "50x50"
              %td.fix-width= book.name
              - if book.status?
                %td= 'Available'
              - else
                %td.available{title: "#{book.user.name}"}
                  = "Not available"
              %td= link_to 'Show', book
    .pagination.justify-content-center
      = paginate @books
