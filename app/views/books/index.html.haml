#books-index
  .content
    .books-index
      %table.table.table-hover
        %thead
          %tr
            %td= 'Name'
            %td= 'Author'
            %td= 'Status'
        %tbody
          - @books.each do |book|
            %tr
              - if book.cover?
                %td= image_tag book.cover.url
              - else
                %td= image_tag "no_cover.png", size: "50x50"
              %td= book.name

              - if book.status?
                %td= 'Avilable'
              - else
                %td{title: "#{book.user.name}"}
                  = "Not avilable"
              %td= link_to 'Show', book
              -#%td= link_to 'Edit', edit_book_path(book)
              -#%td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }

