.login-page
  .form
    Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail"
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "new-password", placeholder: "password"
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password"
      .actions
        = f.button "Sign up"
      %p.message
        Already registered?
        %a{:href => new_user_session_path} Sign Int
